/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.activityCard{
  margin-top: 30rpx;
  width: 90%;
  height: 400rpx;
  background-color: white;
  display: flex;
  justify-content:center;
  border-radius: 20rpx;
  overflow: hidden;
  flex-direction:column;
  margin-bottom: 30rpx;
}
.upCard{
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  position: relative;
}
.upCard_backGroundImage{
  width: 100%;
  height: 320rpx;
  z-index: 1;
}

.upCard_titleText{
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  font-size: 40rpx;
  z-index: 2;
  text-align: center;
  color: white;
}

.upCard_dayText{
  position: absolute;
  font-size: 35rpx;
  bottom: 20rpx;
  left: 40rpx;
  z-index: 2;
  text-align: left;
  color: whitesmoke;
}

.upCard_cancelButton{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 2;
}

.downCard{
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  position: relative;
}

.downCard_memberIcon{
  margin-top: 20rpx;
  margin-left: 20rpx;
  height: 40rpx;
  width: 40rpx;
}

.downCard_memberNumText{
  margin-left: 20rpx;
  margin-top: 20rpx;
  position: absolute;
  font-size: 30rpx;
}

.downCard_leaderIcon{
  height: 40rpx;
  width: 40rpx;
  right: 20rpx;
  margin-top: 20rpx;
  position: absolute;
}

.downCard_organizerText{
  font-size: 30rpx;
  text-align:right;
  overflow:hidden;/* 超出一行文字自动隐藏 */
  text-overflow:ellipsis;/*文字隐藏后添加省略号*/
  white-space:nowrap; /*强制不换行*/
  width: 300rpx;
  margin-top: 20rpx;
  right: 70rpx;
  color: gray;
  position: absolute;
}